{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "pwa-node",
        "request": "launch",
        "name": "Debug Backend (npm run dev)",
        "cwd": "${workspaceFolder}/backend",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "dev"],
        "console": "integratedTerminal",
        "restart": true,
        "env": {
          "NODE_ENV": "development"
        },
        "skipFiles": [
          "<node_internals>/**"
        ]
      }
    ]
}